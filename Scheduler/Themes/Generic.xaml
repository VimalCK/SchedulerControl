<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Scheduler">

    <Style x:Key="ParentGridStyle"
           TargetType="Grid">
        <Setter Property="VerticalAlignment"
                Value="Stretch" />
        <Setter Property="HorizontalAlignment"
                Value="Left" />
    </Style>

    <Style TargetType="{x:Type local:DateHeader}">
        <Setter Property="UseLayoutRounding"
                Value="True" />
        <Setter Property="SnapsToDevicePixels"
                Value="True" />
        <Setter Property="ClipToBounds"
                Value="True" />
    </Style>

    <Style TargetType="local:ContentTransformLabel">
        <Setter Property="UseLayoutRounding"
                Value="True"/>
        <Setter Property="BorderThickness"
                Value="1"/>
        <Setter Property="Background"
                Value="White"/>
        <Setter Property="BorderBrush"
                Value="{Binding Path=TimeLineColor, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=local:ScheduleControl}}"/>
    </Style>

    <Style TargetType="{x:Type local:TimeLineHeader}">
        <Setter Property="UseLayoutRounding"
                Value="True" />
    </Style>

    <Style TargetType="{x:Type local:RulerGrid}">
        <Setter Property="UseLayoutRounding"
                Value="True" />
    </Style>

    <Style TargetType="{x:Type local:TimeRulerPanel}">
        <Setter Property="UseLayoutRounding"
                Value="True" />
        <Setter Property="IsHitTestVisible"
                Value="False" />
    </Style>

    <Style TargetType="{x:Type local:Scheduler}">
        <Setter Property="UseLayoutRounding"
                Value="True" />
        <Setter Property="Background"
                Value="Transparent" />
        <Setter Property="BorderThickness"
                Value="0" />
        <Setter Property="ItemsPanel">
            <Setter.Value>
                <ItemsPanelTemplate>
                    <Canvas x:Name="PART_SchedulerCanvas" />
                </ItemsPanelTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="{x:Type local:ScheduleControl}">
        <Setter Property="SnapsToDevicePixels"
                Value="True" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:ScheduleControl}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" 
                                              MinWidth="150"/>
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>

                        <Grid>
                            <Border BorderThickness=".5"
                                    BorderBrush="{Binding RelativeSource={RelativeSource Mode=TemplatedParent}, Path=TimeLineColor}">

                            </Border>
                        </Grid>

                        <Border Grid.Column="0" BorderBrush="Black" BorderThickness=".5"/>

                        <ScrollViewer x:Name="PART_ScrollViewer"
                                      HorizontalScrollBarVisibility="Auto"
                                      VerticalScrollBarVisibility="Auto"
                                      Grid.Column="1">
                            <Grid x:Name="PART_ParentGrid"
                                  Style="{StaticResource ParentGridStyle}">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="25" />
                                    <RowDefinition Height="25" />
                                    <RowDefinition />
                                </Grid.RowDefinitions>

                                <local:DateHeader x:Name="PART_DateHeader" />
                                <local:TimeLineHeader x:Name="PART_TimeLineHeader"
                                                      Grid.Row="1" />

                                <Grid Grid.Row="2">
                                    <local:RulerGrid x:Name="PART_RulerGrid" />
                                    <local:Scheduler x:Name="PART_Scheduler"
                                                     ItemsSource="{Binding RelativeSource={RelativeSource Mode=TemplatedParent}, Path=AppointmentSource}" />
                                    <local:TimeRulerPanel x:Name="PART_TimeRulerPanel" />
                                </Grid>
                            </Grid>
                        </ScrollViewer>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
